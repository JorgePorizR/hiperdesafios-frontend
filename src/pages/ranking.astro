---
import Layout from "@layouts/Layout.astro";

// Datos de prueba
const rankingData = [
  { position: 1, username: "Campeón2024", points: 2500, avatar: "👑" },
  { position: 2, username: "DesafiantePro", points: 2300, avatar: "🥈" },
  { position: 3, username: "HiperMaster", points: 2100, avatar: "🥉" },
  { position: 4, username: "GamerElite", points: 1950, avatar: "🎮" },
  { position: 5, username: "PuntoMax", points: 1800, avatar: "⭐" },
  { position: 6, username: "RetoMaster", points: 1750, avatar: "🎯" },
  { position: 7, username: "DesafioKing", points: 1700, avatar: "👾" },
  { position: 8, username: "PuntoPro", points: 1650, avatar: "🎲" },
  { position: 9, username: "HiperGamer", points: 1600, avatar: "🎪" },
  { position: 10, username: "RetoElite", points: 1550, avatar: "🎨" },
  { position: 11, username: "DesafioPro", points: 1500, avatar: "🎭" },
  { position: 12, username: "PuntoMaster", points: 1450, avatar: "🎪" },
  { position: 13, username: "HiperReto", points: 1400, avatar: "🎯" }
];
---

<Layout title="Ranking de HiperDesafio">
  <div class="container mx-auto px-4 py-8">
    <h1 class="text-3xl font-bold mb-8 text-center" style="color:#ED6A0F">Ranking de Jugadores</h1>
    
    <!-- Podio Top 3 -->
    <div class="max-w-4xl mx-auto mb-12">
      <div class="flex justify-center items-end gap-4 h-64">
        <!-- Segundo Lugar -->
        <div class="flex flex-col items-center w-1/3 group">
          <div class="w-16 h-16 rounded-full bg-gray-200 flex items-center justify-center text-2xl mb-2 
                    transition-all duration-300 group-hover:scale-110 group-hover:bg-gray-300 
                    group-hover:shadow-lg group-hover:shadow-gray-400/50">
            {rankingData[1].avatar}
          </div>
          <div class="bg-gray-100 rounded-t-lg p-4 w-full text-center transition-all duration-300
                    group-hover:bg-gray-200 group-hover:shadow-lg group-hover:-translate-y-1">
            <div class="text-2xl font-bold text-gray-400 mb-1 group-hover:text-gray-600">2</div>
            <div class="font-semibold text-gray-700 group-hover:text-gray-900">{rankingData[1].username}</div>
            <div class="text-[#ED6A0F] font-bold group-hover:text-[#d45a00]">{rankingData[1].points} pts</div>
          </div>
        </div>
        
        <!-- Primer Lugar -->
        <div class="flex flex-col items-center w-1/3 group">
          <div class="w-20 h-20 rounded-full bg-yellow-100 flex items-center justify-center text-3xl mb-2
                    transition-all duration-300 group-hover:scale-110 group-hover:bg-yellow-200
                    group-hover:shadow-lg group-hover:shadow-yellow-400/50">
            {rankingData[0].avatar}
          </div>
          <div class="bg-[#ED6A0F] rounded-t-lg p-4 w-full text-center transition-all duration-300
                    group-hover:bg-[#d45a00] group-hover:shadow-lg group-hover:-translate-y-2">
            <div class="text-2xl font-bold text-white mb-1 group-hover:text-yellow-100">1</div>
            <div class="font-semibold text-white group-hover:text-yellow-100">{rankingData[0].username}</div>
            <div class="text-white font-bold group-hover:text-yellow-100">{rankingData[0].points} pts</div>
          </div>
        </div>
        
        <!-- Tercer Lugar -->
        <div class="flex flex-col items-center w-1/3 group">
          <div class="w-16 h-16 rounded-full bg-amber-100 flex items-center justify-center text-2xl mb-2
                    transition-all duration-300 group-hover:scale-110 group-hover:bg-amber-200
                    group-hover:shadow-lg group-hover:shadow-amber-400/50">
            {rankingData[2].avatar}
          </div>
          <div class="bg-amber-600 rounded-t-lg p-4 w-full text-center transition-all duration-300
                    group-hover:bg-amber-700 group-hover:shadow-lg group-hover:-translate-y-1">
            <div class="text-2xl font-bold text-white mb-1 group-hover:text-amber-100">3</div>
            <div class="font-semibold text-white group-hover:text-amber-100">{rankingData[2].username}</div>
            <div class="text-white font-bold group-hover:text-amber-100">{rankingData[2].points} pts</div>
          </div>
        </div>
      </div>
    </div>

    <!-- Tabla del resto de posiciones -->
    <div class="max-w-4xl mx-auto">
      <div class="bg-white rounded-lg shadow-lg overflow-hidden">
        <table class="min-w-full">
          <thead>
            <tr class="bg-gray-50">
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Posición</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Usuario</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Puntos</th>
            </tr>
          </thead>
          <tbody class="bg-white divide-y divide-gray-200">
            {rankingData.slice(3).map((user) => (
              <tr class="hover:bg-gray-50 transition-colors duration-200">
                <td class="px-6 py-4 whitespace-nowrap">
                  <div class="text-sm font-medium text-gray-900">#{user.position}</div>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <div class="flex items-center">
                    <div class="flex-shrink-0 h-8 w-8 flex items-center justify-center text-lg">
                      {user.avatar}
                    </div>
                    <div class="ml-4">
                      <div class="text-sm font-medium text-gray-900">{user.username}</div>
                    </div>
                  </div>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <div class="text-sm font-semibold" style="color:#ED6A0F">{user.points} pts</div>
                </td>
              </tr>
            ))}
          </tbody>
        </table>
      </div>
    </div>
  </div>
</Layout>
