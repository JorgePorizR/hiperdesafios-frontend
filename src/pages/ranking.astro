---
import Layout from "@layouts/Layout.astro";
import { fade } from "astro:transitions";
---

<Layout title="Ranking de HiperDesafio">
  <div class="container mx-auto p-4">
    <h1 class="text-2xl font-bold mb-4">Ranking</h1>
    <p class="text-gray-700 mb-4">Aquí puedes ver el ranking de los usuarios.</p>
    <table class="min-w-full bg-white border border-gray-200">
      <thead>
        <tr class="bg-gray-100">
          <th class="px-4 py-2 border">Posición</th>
          <th class="px-4 py-2 border">Usuario</th>
          <th class="px-4 py-2 border">Puntos</th>
        </tr>
      </thead>
      <tbody>
        <!-- Aquí puedes mapear los datos del ranking -->
        <tr class="hover:bg-gray-50">
          <td class="px-4 py-2 border">1</td>
          <td class="px-4 py-2 border">Usuario1</td>
          <td class="px-4 py-2 border">1000</td>
        </tr>
        <tr class="hover:bg-gray-50">
          <td class="px-4 py-2 border">2</td>
          <td class="px-4 py-2 border">Usuario2</td>
          <td class="px-4 py-2 border">900</td>
        </tr>
        <!-- Agrega más filas según sea necesario -->
      </tbody>
    </table>
  </div>
</Layout>
